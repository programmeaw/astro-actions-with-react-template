---
import "@/styles/global.css";

// Get the site URL from Astro config (which reads from your env file)
const siteUrl = import.meta.env.SITE;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Robot/Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={siteUrl} />

    <!-- Meta Info -->
    <title>Your Site Name | Your Tagline Here</title>
    <meta name="description" content="Brief description of your website. Add details about what your site offers to visitors." />
    <meta name="keywords" content="keyword1, keyword2, keyword3, relevant, search, terms" />
    <meta name="author" content="Your Organization Name" />

    <!-- Theme Preference (default: Dark) -->
    <meta name="theme" content="dark" />
    <meta name="color-scheme" content="light dark" />
    <meta name="darkreader-lock" content="dark" />

    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content="Site Name" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Your Page Title | Your Brand" />
    <meta property="og:description" content="A compelling description of your page for social media sharing." />
    <meta property="og:url" content={siteUrl} />
    <!-- <meta property="og:image" content={`${siteUrl}/assets/og-image.png`}> -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Your Twitter Title" />
    <meta name="twitter:description" content="Brief description for Twitter sharing (max 200 characters)." />
    <meta name="twitter:site" content="@yourusername" />
    <!-- <meta name="twitter:image" content={`${siteUrl}/assets/twitter-card.png`}> -->
  </head>

  <body>
    <slot />
  </body>
</html>
